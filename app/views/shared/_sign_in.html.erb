<div class="dvLogin">
  <%= form_for Player.new, :url => { :action => "login", :controller => "players" } do |f| %>
  <fieldset>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Log In" %>
  <% end %>
  </fieldset>
</div>

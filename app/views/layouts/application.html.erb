<!DOCTYPE html>
<html>
<head>
  <title>PingPong Tracker 5000!</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<div class="nav">
  <%= link_to "View Players", players_path %>
  <%= link_to "View Matches", matches_path %>
</div>

<% if current_user %>
  <p>Logged in as <%= current_user.name %> (<%= link_to "Logout", logout_path %>)</p>
<% else %>
  <%= render "shared/sign_in" %>
<% end %>

<%= yield %>

</body>
</html>

<h1>Players</h1>

<p><%= link_to "Add new player", new_player_path %></p>

<table class="listing">
  <thead>
    <tr>
      <th>Player</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>
        <td><%= player.wins %></td>
        <td><%= player.losses %></td>
        <% if current_user_is_admin  || current_user == player %>
          <td>
              <%= link_to "Edit", edit_player_path(player) %>
              <%= link_to "Delete", player, method: "delete", data: {
                confirm: "Are you sure?"} %>
          </td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
